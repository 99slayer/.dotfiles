{
  "telemetry.telemetryLevel": "off",
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.insertSpaces": false,
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Gruvbox Dark (Soft)",
  "workbench.startupEditor": "none",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.iconTheme": "vscode-icons",
  "tailwind-fold.foldStyle": "QUOTES",
  "editor.wordWrap": "on",
  "terminal.integrated.defaultLocation": "editor",
  "editor.defaultFormatter": "biomejs.biome",
  "debug.javascript.codelens.npmScripts": "never",
  "workbench.editor.empty.hint": "hidden",
  "editor.stickyScroll.enabled": false,
  "notebook.multiCursor.enabled": true,
  "terminal.integrated.altClickMovesCursor": false,
  "editor.dropIntoEditor.preferences": [],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.stickyScroll.enabled": false,
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.dockercompose",
  "editor.fontFamily": "'RobotoMono Nerd Font','Droid Sans Mono', 'monospace', monospace",
  "editor.guides.indentation": false,
  "biome.suggestInstallingGlobally": false,
  "workbench.colorCustomizations": {
    "tab.activeBorderTop": "#fabd2f"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  }
}
